.section
  background rgba(25,25,25,0.25) url('../../public/assets/images/hero-img__mobile.png')
  background-repeat no-repeat
  background-size cover
  background-position 50%
  padding 26px 0 40px
  min-height 686px
  box-sizing border-box

  @media (min-width 768px)
    .section
      padding 160px 0 60px
      max-height 860px
      min-height auto

  @media (min-width 1024px)
    .section
      background-image url('../../public/assets/images/hero-img__banner.png')

  @media (min-width 1200px)
    .section
      padding 140px 0 70px

  @media (min-width 1600px)
    .section
      padding 205px 0 98px

.wrapper
  height 556px
  display flex
  align-items flex-start
  flex-direction column
  justify-content center
  max-width 480px

  @media (min-width  768px)
    .wrapper
      height auto

  @media (min-width 1024px)
    .wrapper
      max-width 800px

  @media (min-width 1600px)
    .wrapper
      max-width 900px

.title
  color #fff
  font-family 'SquadExtraBold', sans-serif
  font-weight 800
  margin-bottom 34px
  font-size 40px
  line-height 48px
  letter-spacing -0.02em

  @media (min-width 768px)
    .title
      font-size 48px
      line-height 56px
      letter-spacing 0
  
  @media (min-width 1200px)
    .title
      font-size 56px
      line-height 54px
      margin-bottom 30px

  @media (min-width 1600px)
    .title
      font-size 72px
      line-height 88px
      margin-bottom 42px

.inline
  @media (min-width 1600px)
    .inline
      display inline-block

.btn
  width 100%

  @media (min-width 768px)
    .btn
      width auto
