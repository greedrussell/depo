.list
  margin-bottom 32px
  position relative
  padding-left 58px

  @media (min-width 1600px)
    margin-bottom 58px

.item
  display flex
  margin-bottom 26px

  &last-child
    margin-bottom 0

  @media (min-width 1600px)
    margin-bottom 32px
    align-items center
  
.img
  position absolute
  left 0

.text
  font-family 'SourceSansProBold'
  font-weight 600
  font-size 24px
  line-height 32px
  color #fff
  max-width 660px

  @media (min-width 1600px)
    font-size 32px
    line-height 40px