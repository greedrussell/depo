@import '../../../../src/styles/variable'

.menu
  display flex
  flex-direction column

  @media (min-width $tablet)
    flex-direction row
    align-items center
    justify-content space-between

.item
  margin-bottom 8px

  @media (min-width $tablet)
    margin-bottom 0

  &last-child
    margin-bottom 0

    & .link
      padding-bottom 0

      @media (min-width $tablet)
        padding-bottom 32px

  

.link
  font-family $accent-font
  font-weight bold
  font-size 18px
  line-height 32px
  color $black
  padding 0 0 8px
  display block
  transition 0.4s

  &hover
    color $dark-green

  @media (min-width $tablet)
    padding 32px 0
