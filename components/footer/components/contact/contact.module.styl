@import '../../../../src/styles/variable'

.contact
  display flex
  flex-direction column

  & + ul
    margin-top 16px

.title
  font-family $accent-font
  font-weight bold
  color $black
  font-size 18px
  line-height 32px
  margin-bottom 16px

.link
  font-family $accent-font
  font-weight bold
  font-size 24px
  color $black
  line-height 32px
  margin-bottom 4px
  align-self baseline

  &last-child
    margin-bottom 0
