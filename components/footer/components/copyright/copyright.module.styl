.block
  font-family 'SourceSansPro', sans-serif
  font-weight normal
  font-size 14px
  line-height 24px
  color #FFFFFF
  background-color #52AE30
  border-top-left-radius 44px
  border-top-right-radius 44px

.wrapper
  display flex
  flex-direction column
  padding 32px 0

  @media (min-width 768px)
    padding 0
    flex-direction row
    align-items center
    justify-content space-between
    height 120px

.img
  width 112px

.text
  margin-bottom 8px
  margin-top 24px

  @media (min-width 768px)
    margin-bottom 0
    margin-top 0

.copyright
  font-family 'Source Sans Pro', sans-serif
  font-style normal
  font-weight normal
  font-size 14px
  line-height 24px
  color #fff