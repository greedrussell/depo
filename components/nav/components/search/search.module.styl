.search
  position relative
  height 40px
  box-sizing border-box
  display flex
  align-items center
  justify-content flex-start
  flex 0 0 45%
  min-width 0

.input
  font-family sans-serif
  height 100%
  width 100%
  border-radius 5px
  border none
  padding-left 56px

.icon
  width 16px
  height 16px
  position absolute
  top 12px
  left 16px
  fill #333