@import '../../src/styles/variable.styl'

.section
  padding 30px 0

  @media (min-width: $tablet) 
    padding 40px 0 22px
  
  @media (min-width: $laptop) 
    padding 60px 0 42px
  
  @media (min-width: $desktop) 
    padding 80px 0 62px
  
.title 
  margin-bottom 24px

  @media (min-width $tablet) 
    margin-bottom: 48px
    max-width 480px
  
.inline 
  display inline-block

.main 
  display flex
  flex-direction column

  @media (min-width: $tablet) 
    flex-direction row
    margin-top 40px
  
  @media (min-width: 992px) 
    flex-direction row
    margin-top 0
  
.left 
  flex: 1 0
  min-width 0

  @media (min-width: $tablet) 
    min-width 340px
  
  @media (min-width: 992px) 
    margin-top 104px
  
.rigth 
  flex 1 0
  margin-top 18px

  @media (min-width: $tablet)  
    min-width 340px
    max-width 450px
    padding-left 20px
    margin-top 0
    box-sizing border-box
  
  @media (min-width: 992px) 
    padding-left 110px
    margin-top 48px
  
