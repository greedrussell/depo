:global
  h1, h2, h3, h4, h5, p, a
    margin 0
    padding 0

  h2
    font-family sans-serif
    font-size 28px
    line-height 36px
    color $dark-black

    @media (min-width 768px)
      font-size 40px
      line-height 48px

  a
    text-decoration none

    &:hover, &:active, &:focus
      outline none

  .title-h2
    font-family $accent-font
    font-weight 800
    color $dark-black
    font-size 32px
    line-height 40px

    @media (min-width 1600px)
      font-size 40px
      line-height 48px
      letter-spacing -0.4px
    
  .title-h3
    font-family $accent-font
    font-weight 800
    font-size 24px
    line-height 32px
    color $dark-black