// /fonts/ путь который нужен для статических файлов так как они лежат в public директории

:global
  @font-face
    font-family 'SquadExtraBold'
    font-style normal
    src url('/assets/fonts/Squad-ExtraBold.ttf')

  @font-face
    font-family 'SourceSansPro'
    font-style normal
    src url('/assets/fonts/SourceSansPro-Regular.ttf')

  @font-face
    font-family 'SourceSansProBold'
    font-style normal
    src url('/assets/fonts/SourceSansPro-Bold.ttf')
