:global
  .btn
    font-family $accent-font
    font-weight bold
    font-size 16px
    line-height 24px
    color #FFFFFF
    height 48px
    display flex
    align-items center
    justify-content center
    border 2px solid rgba(0,0,0,0)
    border-radius 32px
    padding 0 40px
    cursor pointer
    transition 0.4s

    @media (min-width 1200px)
      height 56px

    @media (min-width 1600px)
      font-size 20px
      line-height 28px

    &--green
      background-color #52AE30

      &:hover, &:active, &:focus
        background-color #6ECD4A

    &--orange
      background-color #FF6600

      &:hover, &:active, &:focus
        background-color #FF802B

    &--opacity
      background-color rgba(0,0,0,0)
      border 2px solid #fff

      &:hover, &:active, &:focus
        border 2px solid #FF802B
        background #FF802B

    &--disabled
      background-color #B8B8B8

    &--small
      height 36px
      font-size 14px
      line-height 20px

      @media (min-width 768px)
        height 48px
        font-size 16px
        line-height 24px