@import '../../../../styles/variable.styl'

.wrapper
  display flex
  align-items flex-start
  flex-direction column
  justify-content center
  max-width 480px

  @media (min-width  768px)
    height auto

  @media (min-width 1024px)
    max-width 800px

  @media (min-width 1600px)
    max-width 900px

.title
  color #fff
  font-family $accent-font
  font-weight 800
  margin-bottom 34px
  font-size 40px
  line-height 48px
  letter-spacing -0.02em

  @media (min-width 768px)
    font-size 48px
    line-height 56px
    letter-spacing 0
  
  @media (min-width 1200px)
    font-size 56px
    line-height 54px
    margin-bottom 30px

  @media (min-width 1600px)
    font-size 72px
    line-height 88px
    margin-bottom 42px

.btn
  width 100%

  @media (min-width 768px)
    width auto
